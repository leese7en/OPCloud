<link rel="stylesheet" href="/stylesheets/styles.css"/>
<style type="text/css">
    body {
        background-image: url('/images/bg.jpg');
    }

    table td {
        padding: 4px;
    }

    .width_ {
        width: 100%;
    }

    .label_ {
        vertical-align: middle;
        margin-top: 8px;
    }

    .tdlabel_ {
        width: 10%;
        text-align: center;
    }

    .tdinput_ {
        width: 40%
    }

    .tdinput_ input {
        width: 90%
    }

    .inputErr {
        border-color: red;
        border-width: 2px;
    }
</style>
<body>
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 text-center">
            <h2 class="text-primary" style="color:#fff;">个人用户注册</h2>
            <hr class="primary">
        </div>
        <div class="col-lg-8 col-lg-offset-2">
            <form class="row form-horizontal" role="form" id="register_form" style="background:rgba(255,255,255,0.3);padding:10px;">
                <table class="width_">
                    <tr class="width_">
                        <td class="tdlabel_"><label for="job_no" class="label_">登录名</label></td>
                        <td class="tdinput_"><input type="text" onblur="validateJobNo()" class="form-control" placeholder="登录用户名(只能是数字、字母和下划线)" id="job_no">
                    </tr>
                    <tr class="width_">
                        <td class="tdlabel_"><label for="password" class="label_">密码</label></td>
                        <td class="tdinput_"><input onblur="validatePassword()" type="password" class="form-control" placeholder="密码" id="password"></td>
                    </tr>
                    <tr class="width_">
                        <td class="tdlabel_"><label for="password2" class="label_">确认密码</label></td>
                        <td class="tdinput_"><input onblur="validatePassword2()" type="password" class="form-control" placeholder="确认密码" id="password2"></td>
                    </tr>
                    <tr class="width_">
                        <td class="tdlabel_"><label for="email" class="label_">邮箱</label></td>
                        <td class="tdinput_"><input onblur="validateEmail()" type="text" class="form-control" placeholder="邮箱" id="email"></td>
                    </tr>
                    <tr class="width_">
                        <td class="tdlabel_"><label for="mobile_phone" class="label_">电话号码</label></td>
                        <td class="tdinput_"><input type="text" class="form-control" placeholder="电话号码" id="mobile_phone"></td>
                    </tr>
                    <tr class="width_">
                        <td class="tdlabel_"><label class="label_">验证码</label></td>
                        <td class="tdinput_">
                            <div>
                                <input type="text" class="form-control" style="width:70%;" placeholder="请输入手机收到的验证码" id="smsCode"/>
                                <button type="button" id="sendSmsCode" onclick="getPhoneSmsCode()" class="btn btn-success"
                                        style="border-radius: 0.2em;margin-left: 72%;margin-top:-56px;">
                                    获取验证码
                                </button>
                            </div>
                        </td>
                    </tr>
                    <tr class="width_">
                        <td colspan="4">
                            <div class="col-md-12 text-left">
                                <input onchange="validateCheck()" type="checkbox" id="Check_"><label for="Check_">&nbsp;
                                &nbsp;已阅读并同意<a href="#" onclick="securityStatement()"
                                               style="font-family: 'STHeiti', 'Microsoft YaHei','微软雅黑','宋体'">安全声明</a></label>
                            </div>
                        </td>
                    </tr>
                    <tr class="width_">
                        <td colspan="4" style="text-align: center">
                            <button type="button" onclick="addCustomerIndividual()" class="btn btn-success btn-lg" disabled="disabled"
                                    style="border-radius: 0.3em" id="addCustomer">&nbsp;&nbsp;&nbsp;提交&nbsp;&nbsp;&nbsp;
                            </button>
                            &nbsp;&nbsp;&nbsp;
                            <button type="button" onclick="location.href='/'" class="btn btn-info btn-lg" style="border-radius: 0.3em">返回登录</button>
                        </td>
                    </tr>
                </table>
            </form>
        </div>
    </div>
</div>
</body>
<link href="/plugins/bootstrap-select/css/bootstrap-select.min.css" rel="stylesheet"/>
<script src="/plugins/bootstrap-select/js/bootstrap-select.min.js"></script>
<script src="/javascripts/system/addCustomer.js"></script>
<script src="/javascripts/jquery.md5.js"></script>
<script src="/plugins/sweetalert/dist/sweetalert.min.js"></script>
<link rel="stylesheet" type="text/css" href="/plugins/sweetalert/dist/sweetalert.css"/>
<script>
    //邮箱激活提示代码块
    var message = '{{message}}';
    if (message != "") {
        swal({title: "Error!", text: message, type: "error", confirmButtonText: "确认"});
        if (message == "success") {
            swal({title: "Success!", text: "注册成功请返回登录", type: "success", confirmButtonText: "确认"},
                    function () {
                        self.location = '/';
                    }
            );
        }
    }
</script>