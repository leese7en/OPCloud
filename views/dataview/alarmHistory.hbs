<script>
    //维护全局变量
    if (window.parent.socket) {
        socket = window.parent.socket;
    } else {
        var token = '{{token}}';
        socket = io.connect(socketURI, {
            'query': 'token=' + token
        });
    }
    socket.removeAllListeners('alarmHistoryData');
    socket.on('alarmHistoryData', function (data) {
        if (data.total == 0) {
            $('#table').bootstrapTable('refreshOptions', {pageNumber: 1});
        }
        $("#table").bootstrapTable('load', data);
        alarmAPColor();
    });
</script>
